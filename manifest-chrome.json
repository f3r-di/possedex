{
  "manifest_version": 2,
  "name": "Possedex",
  "version": "{VERSION}",
  "description": "Avec le Possedex, apprenez en un clin d'oeil qui se trouve derrière le média que vous êtes en train de lire !",
  "background": {
    "scripts": ["background.js", "content.js", "install.js"],
    "persistent": false
  },
  "homepage_url": "http://possedex.info/",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png"
  },
  "browser_action" :
  {
    "default_icon" : "icon-64.png",
    "default_title" : "Possedex",
    "default_popup": "popup.html"
  },
    "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions" : [
    "declarativeContent",
    "tabs",
    "storage",
    "notifications",
    "activeTab",

    "http://possedex.info/database.json"
  ],
    "web_accessible_resources": [
    "fonts/*",
    "img/*.png",
         "img/*.gif"
    ]
}
